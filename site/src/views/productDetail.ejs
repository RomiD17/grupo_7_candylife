<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head')%>
  <link rel="stylesheet" href="/css/productoDetail.css">
</head>
<body>
		<%- include('./partials/header')%>
    <section id="main-producto">
      <div class="container">
        <div class="breadcum">
          <a href="/"><i class="fas fa-home"></i></a>
          <a href="/shop"> Shop <i class="fas fa-angle-right"></i></a>
          <a href="/gomitas">Gomitas <i class="fas fa-angle-right"></i></a>
          Haribo
        </div>
        <div class="columna5 ">
          <div class="columna container-img">
              <% if(product.src.includes('http')){ %>
                <img src="<%= product.src %> " > 
                <%} else { %>
                 <img src="/images/<%= product.src %>" />
                <% } %> 
          </div>
          <div class="row container-img">
            <div class="columna2">
              <img class="thumb" src="/images/thumb-1.jpg"/>
            </div>
            <div class="columna2">
              <img class="thumb" src="/images/thumb-2.jpg"/>
            </div>
            <div class="columna2">
              <img class="thumb" src="/images/thumb-1.jpg"/>
            </div>
            <div class="columna2">
              <img class="thumb" src="/images/thumb-2.jpg"/>
            </div>
          </div>
        </div>
          <div class="columna4">
            <div class="detail-prod">
              <div class="detail-texto">
                <h3> <%= product.prodNombre %> </h3>
                <p> <%= product.marca %> </p>
                <p class="detail-peso"> <%= product.gramaje %> gms</p>
                <p class="detail-precio">
                  <span> $<%= product.mainPrecio %> </span>
                  $<%= product.discountPrecio %></p>
                <div class="columna1 plus">
                    <i class="fas fa-plus"></i>
                </div>
                <div class="columna2">
                  <input type="number" maxlength="2"/>
                </div>
                <div class="columna1 minus">
                    <i class="fas fa-minus"></i>
                </div>
                
              </div>
              <a href="productCart"><div class="btn-comprar columna4">Agregar al Carrito</div>
              <a href="/wishlist"><div class="btn-line columna4"><i class="far fa-heart"></i>Añadir a la wishlist</div>
              </a>
            </div>
            <div class="share">
              Comparte 
              <i class="fab fa-facebook"></i>
              <i class="fab fa-twitter-square"></i>
              <i class="fab fa-instagram"></i>
            </div>
            <div class="variantes">
              <h2>Otras Variantes</h2>
              <div class="columna3 borde">
                <img src="/images/variante1.jpg"/>
                <p>Happy cherries</p>
              </div>
              <div class="columna3">
                <img src="/images/variante2.jpg"/>
                <p>Berries</p>
              </div>
            </div>
          </div>
          <div class="columna detail-info">
            <h3>Descripción</h3>
            <p> <%= product.detalle %> </p>
            <h3>Información Nutricional</h3>
              <p>
                  Ingredientes: <%= product.nutricional %> </p>
          </div>
      </div>
    </section>
    <%- include('./partials/footer')%>
</body>
</html>