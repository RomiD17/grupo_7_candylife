<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('./partials/head') %>
	<link rel="stylesheet" href="/css/register.css">
</head>
<body>
	<%- include('./partials/header') %>
  <div class="container-fluid">
	<section id="login-registro">
    <div class="container ">
			<h2>Registrarse</h2>
      <div class="columna formulariosContainer">
			<!--Registracion-->
				<div class="columna4 formularios">
					<h2 class="login-title">Registrarse!</h2>
					<small> Campos requeridos <span >*</span></small>
					<form id="registracion" action="/register" method="POST" enctype="multipart/form-data">
					<div>
						<label> Nombre <small class="requerido" >*</small></label>
							<input type="text" name="name" placeholder="Ingrese su nombre">
					</div>
					<div>
						<label > Apellido <small class="requerido" >*</small>
						</label>
						<input type="text" name="lastname" placeholder="Ej: Pérez">
					</div>
					<div>
						<label > Domicilio</label>
						<input name="adress" type="text" placeholder="Ingrese su domicilio">
					</div>
					<div>
						<label class= "login label" for="login-email"> E-mail
						<small class="requerido" >*
						</small>
						</label>
						<input type="email" name="email" placeholder="tunombre@email.com">
					</div>
					<div>
						<label > Contraseña <small class="requerido" >*</small>
						</label>
						<input type="password" name="password" placeholder="Contraseña">
					</div>
					<div>
						<label class="login label" for="login-pass"> Confirmar contraseña
						<small class="requerido" >*</small>
						</label>
						<input type="password" name="rePassword" placeholder="Repita la contraseñ">

					</div>
					<div class="btn-register" >
						<button type="submit" class="btn-principal" > Crear cuenta
					</button>
					</div>
				</form>
				</div>
				<!--Fin resitracion-->
			</div>
    </section>
  
	<%- include('./partials/redes') %>
	<%- include('./partials/footer') %>
</div>
</body>
</html>